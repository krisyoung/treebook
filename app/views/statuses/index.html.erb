<h1>All Statuses</h1>

<ul>
  <% @statuses.each do |status| %>
  <li>
    <article>
      <header>
        <h4><%= status.name %></h4>
      </header>
      <p><%= status.content %></p>
      <footer>
        <ul>
          <li><%= link_to 'Show', status %></li>
          <li><%= link_to 'Edit', edit_status_path(status) %></li>
          <li><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></li>
        </ul>
      </footer>
    </article>
  </li>
  <% end %>
</ul>

<br />

<%= link_to 'New Status', new_status_path %>
